<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<!--    subir el diseño a github-->
    <!--    creacion del diseño-->
    <!--    creacion del diseño-->
    <!--    creacion del diseño-->
    <!--    creacion del diseño-->
    <!--    creacion del diseño-->

    <!--    //divicion de principal(toda la area)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:ignore="NestedWeights"
        >
        <!--        //divicion del apartado de operaciones(el cuadro completo  de arriba xd)-->
        <LinearLayout
            android:background="@color/gray_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            >

            <!--            //donde haretodo el texto y cosas feas :'v-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/orange"
                    android:text="@string/returnn"
                    android:gravity="left"
                    android:onClick="Exit"/>
                <TextView
                    android:layout_gravity="bottom|right"
                    android:textSize="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:text=""
                    android:onClick="PressButton"
                    android:id="@+id/resultadofinal"
                    >
                </TextView>

            </FrameLayout>

        </LinearLayout>
        <!--        //divicion de la seccion de teclas-->

        <LinearLayout
            android:backgroundTint="@color/gris"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="10dp"
            >
            <!--            //divicion de las botones-->
            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textColor="@color/orange">

                <Button
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:onClick="PressButton"
                    android:id="@+id/btnClear"
                    android:textColor="@color/orange"
                    android:text="@string/clear"
                    android:textSize="30dp"
                    >
                </Button>

                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/div"
                    android:onClick="PressButton"
                    android:textColor="@color/orange"
                    android:id="@+id/percentage"
                    >
                </Button>
                <Button
                    android:textSize="30dp"
                    android:id="@+id/dividir"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="PressButton"
                    android:text="/"
                    android:textColor="@color/orange"
                    >
                </Button>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="7"
                    android:onClick="PressButton"
                    android:id="@+id/siete"
                    >
                </Button>
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="8"
                    android:onClick="PressButton"
                    android:id="@+id/ocho"
                    >
                </Button>
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="9"
                    android:onClick="PressButton"
                    android:id="@+id/nueve"
                    >
                </Button>

                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:onClick="PressButton"
                    android:id="@+id/mult"
                    android:text="X"
                    android:textColor="@color/orange"
                    >
                </Button>
            </LinearLayout>



            <LinearLayout
                android:weightSum="8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="4"
                    android:onClick="PressButton"
                    android:id="@+id/cuatro"
                    >
                </Button>
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="5"
                    android:onClick="PressButton"
                    android:id="@+id/cinco"
                    >
                </Button>
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="6"
                    android:onClick="PressButton"
                    android:id="@+id/seis"
                    >
                </Button>
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="-"
                    android:onClick="PressButton"
                    android:textColor="@color/orange"
                    android:id="@+id/menos"
                    >
                </Button>
            </LinearLayout>


            <LinearLayout
                android:weightSum="8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="1"
                    android:onClick="PressButton"
                    android:id="@+id/uno"
                    >
                </Button>
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="2"
                    android:onClick="PressButton"
                    android:id="@+id/dos"
                    >
                </Button>
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="3"
                    android:onClick="PressButton"
                    android:id="@+id/tres"
                    >
                </Button>
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="@color/orange"
                    android:text="+"
                    android:onClick="PressButton"
                    android:id="@+id/mas"
                    >
                </Button>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="4"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:onClick="PressButton"
                    android:id="@+id/cero"

                    >
                </Button>
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="."
                    android:onClick="PressButton"
                    android:id="@+id/punto"
                    >
                </Button>
                <Button
                    android:textSize="30dp"
                    android:backgroundTint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/igual"
                    android:onClick="EqualButton"
                    android:textColor="@color/orange"
                    android:id="@+id/resultado"
                    >
                </Button>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>